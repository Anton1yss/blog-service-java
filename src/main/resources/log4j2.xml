<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="%style{%d{yyyy-MM-dd HH:mm:ss.SSS}}{cyan} [%t] %highlight{%-5level} %style{%logger{36}}{green} - %style{Message: %msg}{bg=yellow}%n"
                disableAnsi="false"
                charset="UTF-8"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>